{
  "name": "fly",
  "version": "0.9.1",
  "description": "Modern Build System",
  "license": "MIT",
  "repository": "flyjs/fly",
  "homepage": "https://github.com/flyjs/fly",
  "author": "Jorge Bucaran",
  "main": "lib/index.js",
  "files": [
    "bin/",
    "lib/"
  ],
  "bin": {
    "fly": "./bin/index"
  },
  "dependencies": {
    "arrify": "^1.0.1",
    "chokidar": "^1.4.0",
    "clor": "^2.0.0",
    "co": "^4.5.4",
    "concat-with-sourcemaps": "^1.0.2",
    "dateformat": "^1.0.12",
    "debug": "^2.2.0",
    "flatten": "^1.0.2",
    "globby": "^4.0.0",
    "interpret": "^1.0.0",
    "mkdirp": "^0.5.1",
    "object-assign": "^4.0.1",
    "parsec": "^1.3.0",
    "prettyjson": "^1.1.2",
    "read-pkg-up": "^1.0.1",
    "rimraf": "^2.4.2",
    "source-map": "^0.5.3",
    "thenify-all": "^1.6.0",
    "update-notifier": "^0.5.0"
  },
  "devDependencies": {
    "coveralls": "^2.11.4",
    "isparta": "^4.0.0",
    "tap-nyan": "^0.0.2",
    "tap-spec": "^4.1.1",
    "tape": "^4.2.2",
    "touch": "^1.0.0",
    "xo": "^0.12.0"
  },
  "scripts": {
    "setup": "npm i && npm run test && npm run symlink",
    "symlink": "ln -s $PWD/bin/index /usr/local/bin/fly",
    "coverage": "isparta cover test/*.js",
    "coveralls": "npm run coverage -s && coveralls < coverage/lcov.info",
    "postcoveralls": "rimraf coverage",
    "postbuild": "npm test -s",
    "test": "xo && tape test/cli.js | tspec",
    "deploy": "git pull --rebase origin master && git push origin master",
    "patch": "npm version patch && npm publish",
    "minor": "npm version minor && npm publish",
    "major": "npm version major && npm publish",
    "postpublish": "git push origin master --follow-tags"
  },
  "keywords": [
    "cli",
    "task",
    "build",
    "async",
    "await",
    "minify",
    "uglify",
    "promise",
    "pipeline",
    "generator",
    "coroutine",
    "automation",
    "build system",
    "task runner"
  ],
  "engines": {
    "iojs": ">= 1.0.0",
    "node": ">= 0.12.0"
  },
  "xo": {
    "ignore": [
      "test/**/*.js",
      "examples/**/*.js"
    ],
    "rules": {
      "no-loop-func": 0,
      "no-unused-expressions": 1
    }
  }
}
