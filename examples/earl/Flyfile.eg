paths = {scripts = {
   "src/**/*.eg"
}}

provide: main, clear, scripts

gen main = ->
   yield this.tasks.clear()
   yield this.tasks.scripts()

gen clear = ->
   yield this.clear("build")

gen scripts = ->
   yield chain this:
      @source: paths.scripts[0]
      @earl() ;;  with { es5 = false }
      @concat("all.js")
      @target("build/js")
